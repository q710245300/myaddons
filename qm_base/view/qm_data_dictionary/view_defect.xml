<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_form_qm_defect" model="ir.ui.view">
            <field name="name">QM Defect Form</field>
            <field name="model">qm.defects</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>缺陷类型
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <group>
                            <group name="group_left">
                                <field name="type"/>
                            </group>
                            <group name="group_right">
                                <field name="level"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
        <!-- 定义列表视图 -->
        <record id="view_tree_qm_defect" model="ir.ui.view">
            <field name="name">QM Defect Tree</field>
            <field name="model">qm.defects</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>

